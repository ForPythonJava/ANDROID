<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ADMIN.ReplyFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgReview"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/communicate"
        app:lottie_speed="1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_reply"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgReview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:hint="Write Reply Here....."
        app:boxStrokeColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="serif-monospace"
            android:inputType="textMultiLine"
            android:lines="4" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendReply"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_reply"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:text="Reply"
        android:textColor="@color/white" />

</RelativeLayout>